{
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "match-route": {
        "ClusterId": "match-cluster",
        "Match": {
          "Path": "/api/match/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "messaging-route": {
        "ClusterId": "messaging-cluster",
        "Match": {
          "Path": "/api/messaging/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth/"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://users/"
          }
        }
      },
      "match-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://match/"
          }
        }
      },
      "messaging-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://messaging/"
          }
        }
      }
    }
  }
}
